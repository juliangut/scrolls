set encoding=utf8
set ffs=unix,dos,mac

syntax enable
set showmode
set ruler
set number
set wrap
set laststatus=2
set cmdheight=2

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set shiftround
set autoindent
set copyindent
set backspace=indent,eol,start

set ignorecase
set smartcase
set hlsearch
set incsearch

" Skip annoying sound on errors
set noerrorbells
set novisualbell
set t_vb=
set tm=500
set visualbell
